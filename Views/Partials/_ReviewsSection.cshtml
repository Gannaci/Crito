@using Umbraco.Cms.Core.Models
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
<section class="reviews">
    <div class="container">
        <div class="box">
            <div class="title">@Model.Value("reviewTitle")</div>
            <div class="boldtext">@Model.Value("reviewDescription")</div>
            <div class="boxinfo">
                <div class="customerbox">
                    <div class="stars">
                        <i class="fa-solid fa-star"></i>
                        <i class="fa-solid fa-star"></i>
                        <i class="fa-solid fa-star"></i>
                        <i class="fa-solid fa-star"></i>
                        <i class="fa-solid fa-star"></i>
                    </div>
                    <div class="description">@Model.Value("reviewOneDescription")</div>
                    <div class="customerinfo">
                        @{
                            var reviewOneImage = Model.Value<MediaWithCrops>("reviewOneImage");
                            if (reviewOneImage != null)
                            {
                                <img src="@reviewOneImage.MediaUrl()" alt="@Model.Value("showcaseTitle")">
                            }
                        }
                        <div class="textinfo">
                            <div class="name">@Model.Value("reviewOneNameText")</div>
                            <div class="job">@Model.Value("reviewOneJobText")</div>
                        </div>
                    </div>
                </div>
                <div class="customerbox2">
                    <div class="stars">
                        <i class="fa-solid fa-star"></i>
                        <i class="fa-solid fa-star"></i>
                        <i class="fa-solid fa-star"></i>
                        <i class="fa-solid fa-star"></i>
